									</includes>
								</filter>
								<filter>
									<artifact>mysql:mysql-connector-java:jar:*</artifact>
									<includes>
										<include>**</include>
									</includes>
								</filter>
								<filter>
									<artifact>commons-codec:commons-codec:jar:*</artifact>
									<includes>
