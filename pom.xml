									</includes>
								</filter>
								<!--<filter>
										<artifact>org.apache.bcel:bcel:jar:*</artifact>
										<includes>
												<include>**</include>
										</includes>
								</filter>-->
								<filter>
									<artifact>org.ow2.asm:asm-all:jar:*</artifact>
									<includes>
										<include>**</include>
									</includes>
								</filter>
								<filter>
